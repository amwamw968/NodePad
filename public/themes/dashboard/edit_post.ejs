//              $('.navbar').before(html);
//          }
        </script>
        <div class="col-sm-9 col-sm-offset-3 col-md-11 col-md-offset-1 main">
          <h1 class="page-header">编辑文章</h1>
          <form class="form-horizontal"  id="edit-form" role="form" method="post" action="/blog/update">
