        <script type="text/javascript">
          function edit(draft){
            $('#draft').val(draft);
            $('#edit-form').submit();
          }

          function addlink(){
              if(!$('#urltext').val()||!$('#url').val()||$('#url').val()=="http://"){
                  clearlink();
                  alert('输入错误！');
                  return false;
              }
              $('#post').val($('#post').val()+"["+$('#urltext').val()+"]"+"("+$('#url').val()+")");
              clearlink();
          }

          function  clearlink(){
              $('#urltext').val('link');
              $('#url').val('');
          }

          function scrollListen(){
              $('#post').scroll(function(){
                  $('#preview').scrollTop($('#post').scrollTop());
              });
              $('#post').keyup(function(){
                  $('#preview').scrollTop($('#post').scrollTop());
              });
          }
          function hidePreview(){
             $('.preview').hide();
             $('#editor').css('width','100%');
             $('.show-preview').show();
             $('.hide-preview').hide();
          }
          function showPreview(){
              $('.preview').show();
              $('#editor').css('width','50%');
              $('.hide-preview').show();
              $('.show-preview').hide();
          }
